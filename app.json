{
  "expo": {
    "name": "Aletheia",
    "slug": "app",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "aletheia",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "icon": "./assets/images/app-logo.png",
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/images/app-logo.png",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to your microphone for therapy sessions.",
        "UIBackgroundModes": [
          "audio"
        ]
      },
      "bundleIdentifier": "com.aletheia.app"
    },
    "android": {
      "versionCode": 3,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/app-logo.png",
        "backgroundColor": "#E6F4FE"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
     "package": "com.aletheia.app",
      "permissions": [
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "BLUETOOTH",
        "BLUETOOTH_CONNECT",
        "WAKE_LOCK"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/app-logo.png"
    },
    "plugins": [
      "expo-router",
    
      "@config-plugins/react-native-webrtc",
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 24
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/app-logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#f5f8f7",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "This app needs access to your microphone for therapy sessions."
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "0f7439f7-93af-4a03-a7a1-113129e701f5"
      }
    }
  }
}
